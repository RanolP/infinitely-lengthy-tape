def Bool := data { true. | false. }

def Nat := data { zero. | succ. (_ : Nat) }

def boolToNat (b : Bool) : Nat :=
  match b {
    | true. => Nat.zero.
    | false. => Nat.succ.(Nat.zero.)
  }

